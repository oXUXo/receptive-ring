---
import { Globe, Mail, Phone, Facebook, Twitter, Linkedin, Instagram } from 'lucide-react';
---

<footer class="bg-gray-900 text-white">
      <div class="container mx-auto px-4 md:px-6">
        {/* Newsletter subscription */}
        <div class="py-12 border-b border-gray-800">
          <div class="max-w-3xl mx-auto text-center">
            <h3 class="text-2xl font-bold mb-3">Stay Updated with CeramTech</h3>
            <p class="text-gray-300 mb-6">
              Subscribe to our newsletter for the latest product innovations, industry insights, and company news.
            </p>
            <form class="flex flex-col sm:flex-row gap-3 max-w-lg mx-auto">
              <input
                type="email"
                placeholder="Your email address"
                class="flex-grow px-4 py-3 rounded-md bg-gray-800 border border-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-white/30"
                required
              />
              <button
                type="submit"
                class="bg-white text-gray-900 hover:bg-gray-200 font-medium px-6 py-3 rounded-md transition-colors duration-300"
              >
                Subscribe
              </button>
            </form>
          </div>
        </div>
        
        {/* Footer content */}
        <div class="py-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {/* Company info */}
          <div>
            <div class="flex items-center mb-4">
              <Globe class="h-8 w-8 text-white" />
              <span class="ml-2 text-xl font-bold">CeramTech</span>
            </div>
            <p class="text-gray-400 mb-6">
              Leading manufacturer of advanced industrial ceramics for the most demanding applications.
            </p>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                <Facebook size={20} />
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                <Twitter size={20} />
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                <aedin size={20} />
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                <Instagram size={20} />
              </a>
            </div>
          </div>
          
          {/* Quick as */}
          <div>
            <h4 class="text-lg font-semibold mb-6">Quick as</h4>
            <ul class="space-y-3">
              <li>
                <a href="/products" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Products
                </a>
              </li>
              <li>
                <a href="/applications" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Applications
                </a>
              </li>
              <li>
                <a href="/about" class="text-gray-400 hover:text-white transition-colors duration-300">
                  About Us
                </a>
              </li>
              <li>
                <a href="/resources" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Resources
                </a>
              </li>
              <li>
                <a href="/careers" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Careers
                </a>
              </li>
              <li>
                <a href="/contact" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Contact
                </a>
              </li>
            </ul>
          </div>
          
          {/* Resources */}
          <div>
            <h4 class="text-lg font-semibold mb-6">Resources</h4>
            <ul class="space-y-3">
              <li>
                <a href="/case-studies" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Case Studies
                </a>
              </li>
              <li>
                <a href="/technical-documents" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Technical Documents
                </a>
              </li>
              <li>
                <a href="/material-properties" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Material Properties
                </a>
              </li>
              <li>
                <a href="/faq" class="text-gray-400 hover:text-white transition-colors duration-300">
                  FAQ
                </a>
              </li>
              <li>
                <a href="/blog" class="text-gray-400 hover:text-white transition-colors duration-300">
                  Blog
                </a>
              </li>
            </ul>
          </div>
          
          {/* Contact info */}
          <div>
            <h4 class="text-lg font-semibold mb-6">Contact Us</h4>
            <ul class="space-y-3">
              <li class="flex items-start">
                <MapPin class="w-5 h-5 text-gray-400 mr-3 mt-1" />
                <span class="text-gray-400">
                  1234 Industrial Parkway<br />
                  Suite 500<br />
                  Anytown, CA 90210
                </span>
              </li>
              <li class="flex items-center">
                <Phone class="w-5 h-5 text-gray-400 mr-3" />
                <span class="text-gray-400">(555) 123-4567</span>
              </li>
              <li class="flex items-center">
                <Mail class="w-5 h-5 text-gray-400 mr-3" />
                <span class="text-gray-400">info@ceramtech.com</span>
              </li>
            </ul>
          </div>
        </div>
        
        {/* Copyright */}
        <div class="py-6 border-t border-gray-800 text-center sm:flex sm:justify-between sm:text-left">
          <p class="text-gray-400">
            &copy; {new Date().getFullYear()} CeramTech. All rights reserved.
          </p>
          <div class="mt-4 sm:mt-0">
            <a href="/privacy-policy" class="text-gray-400 hover:text-white transition-colors duration-300 mr-6">
              Privacy Policy
            </a>
            <a href="/terms" class="text-gray-400 hover:text-white transition-colors duration-300">
              Terms of Service
            </a>
          </div>
        </div>
      </div>
    </footer>